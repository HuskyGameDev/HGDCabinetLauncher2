<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="HGDCabinetLauncher.MainWindow"
        Width="1280" Height="720"
        Title="HGDCabinetLauncher">
    
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style Selector="AdornerLayer">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </Window.Styles>
    
    <StackPanel>
        <TextBox Text="Husky Arcade Launcher!" Height="50" FontWeight="Bold"></TextBox>
        <Grid RowDefinitions="670" ColumnDefinitions="*, 250" ShowGridLines="True">
            <Svg Path="logoHGD.svg" MaxHeight="400" HorizontalAlignment="Center" VerticalAlignment="Center"></Svg>
            <ListBox Grid.Column="1" VerticalAlignment="Center" SelectionMode="Single" Margin="5" CornerRadius="15" SelectedIndex="0" MinHeight="500">
                <ListBoxItem>Doom</ListBoxItem>
                <ListBoxItem>Duke Nukem 3D</ListBoxItem>
                <ListBoxItem>Super Mario Kart</ListBoxItem>
            </ListBox>
        </Grid>
    </StackPanel>
</Window>